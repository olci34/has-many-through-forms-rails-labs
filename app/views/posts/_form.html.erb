<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br><br>
    <%= f.label :content %>
    <%= f.text_field :content %><br><br>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
    
    <%= f.label "New Category:" %><br>
    <%= f.fields_for :categories do |c| %>
        <%= c.label :name, "Category Name" %>
        <%= c.text_field :name %>
    <% end %>


    <%= f.submit %>
<% end %>